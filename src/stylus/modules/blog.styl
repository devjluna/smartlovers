.blog
	&-bock
		border 1px solid $gray_light
		text-align left
		border-radius 10px
		overflow hidden
	&-img
		width 100%
		height 280px
		figure
			width 100%
			height 100%
			background-size cover
			background-position center
			background-repeat no-repeat
	&-text
		color $gray_dark
		padding 20px
		h3
			font-family RobotoC
			font-weight 700
			margin 0
		h5
			font-family Roboto
			margin 0
			margin-bottom 25px
		img
			max-width 100%
			height 100%
.blognew
	border 1px solid $gray_light
	cursor pointer
	transition all .3s
	display block
	margin-bottom 2em
	border-radius 10px
	overflow hidden
	width 100%
	&-title
		text-align left
		h3
			text-transform uppercase
			font-size 1.5em
			margin-bottom 1em
			margin-top 0
		span
			font-weight 700
	&-image
		width 100%
		height 100px
		figure
			width 100%
			height 100%
			background-size cover
			background-position center
			background-repeat no-repeat
	&-content
		text-align left
		padding 20px
		h3
			margin 0
			font-family RobotoC
			font-weight 700
			font-size 1.2em
		h5
			margin 0
			margin-bottom 15px
			font-size .8em
	&-btn
		text-align center
		a
			border-radius 25px
	@media screen and (max-width 996px)
		max-width 300px
		margin 0 auto
		margin-bottom 2em
		&:last-child
			margin-bottom 0
		&-title
			text-align center
			margin-top 2em
		
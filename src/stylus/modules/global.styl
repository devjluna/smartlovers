html,
body
	font-family Roboto
	font-weight 400
.form-control
	&:focus,
	&:hover,
	&:active
		border-color $red
		box-shadow initial
		outline initial
.section
	&-row
		padding 50px 0
		text-align center
		background-size cover
		background-repeat no-repeat
		background-position center
.btn
	padding 10px 30px
	border-radius 24px
	&.btn
		&-red
			background-color $red
			color white
			transition all .3s
			&:hover
				background-color black			
.square
	&-btn
		text-align center
		margin-top 20px
		a
			background-color $red
			color white
			text-decoration none
			padding 10px 20px
			display inline-block
			border-radius 20px
			transition all .3s
			&:hover,
			&:focus,
			&:active
				background-color black
			

/*
 * Section Promo
 */
.promo
	background-color $gray_light
	&-article
		background-color $white
		border-radius 10px
		float left
		&:before
			content ''
			width 80px
			height 80px
			background-image url(../images/base/tag-promo.png)
			background-repeat no-repeat
			background-size contain
			position absolute
			z-index 2
			left 0
		.block
			float left
			&-img
				width 40%
			&-text
				width 60%
				height 195px
				display table
			.content
				&-img
					padding 15px
				&-text
					padding-right 15px
					text-align left
					display table-cell
					vertical-align middle
					h3
						margin 0
						color $red
						font-weight 700
					h4
						margin 0
					h5
						margin 0
						margin-bottom .8em
						&:first-child
							text-transform uppercase
					h6
						margin 0
						color $gray_dark
						font-weight 300

/*
 * Section Info
 */
.section
	&-title
		font-family RobotoC
		font-weight 300
		margin 0
		text-align left
		text-transform uppercase
		margin-bottom 10px
		span
			font-weight 700
	&-info
		text-align left
		
/*
 * Banner Pages
 */
.banner
	.container
		height 100%
	&-pages
		height 250px
		width 100%
		background-color $gray
		background-size cover
		background-repeat no-repeat
		background-position center
	&-title
		display table
		height 100%
		width 100%
		h2
			display table-cell
			vertical-align middle
			color $white
			text-transform uppercase
			font-family RobotoC
			font-weight 300
			span
				font-weight 700
				color $white
			i
				color $red
				margin-right 20px
				display inline-block
				vertical-align middle
				font-size 2.5em
	@media screen and (max-width 768px)
		&-pages
			height 100px
		&-title
			h2
				font-size 1.3em

.navbar
	&-nav
		float right
		position relative
		> li
			&:after
				content ''
				position absolute
				border-left 1px solid rgba($white,.4)
				left 0
				top 10px
				height 60%
			&:first-child
				&:after
					content none
	&-btn
		height 50px
		display table
		margin 0
	&-a
		display table-cell
		vertical-align middle
		a
			&.btn-red
				padding 10px 15px
				margin-left 10px
				&:hover,
				&:focus,
				&:active
					background-color $white
					color $red
	@media screen and (max-width 768px)
		&-nav
			float left
			width 100%
			margin 0
			> li
				&:after
					content none
		&-collapse
			padding 0
		&-btn
			width 100%
			text-align center
		&-a
			a
				&.btn-red
					margin-left 0




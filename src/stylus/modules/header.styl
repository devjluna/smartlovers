.header
	position relative
	&-banner
		background-size cover
		background-position center
		background-repeat no-repeat
		background-image url(../images/banner/bg_home.jpg)
	&-nav
		display table
		height 100%
		width 100%
	@media screen and (max-width 540px)
		&-nav
			height initial

.navbarhome
	&-header
		display block
		float none
		a
			display table
			float none
			margin 0 auto
			img
				max-width 11em
	&-collapse
		display block
		float none
		padding 0
		text-align center
		position absolute
		bottom 0
		width 100%
	&-full
		text-align center
		display table-cell
		vertical-align middle
	&-title
		display inline-block
		max-width 35em
		h3
			color $white
			font-family RobotoC
			font-weight 300
			font-size 2em
			margin 1em 0 1.5em
	&-content
		display inline-block
		margin-bottom 30px
	&-nav
		height 100%
		li
			display table
			height 12em
			margin-left 1em
			&:first-child
				margin-left 0
			a
				display table-cell
				vertical-align middle
				background-color $white
				border 4px solid $gray_light
				color $red
				border-radius 5px
				transition all .3s
				width 10em
				font-size 1.2em
				font-family RobotoC
				font-weight 700
				letter-spacing .03em
				span
					display block
					color $red
					transition all .3s
				i
					font-size 4em
					margin-bottom .2em
					display block
					color $red
					transition all .3s
				&:hover,
				&:focus,
				&:active
					background-color $red
					border-color $red
					color $white
					span,
					i
						color $white
	@media screen and (max-width 768px)
		&-content
			margin-bottom 0
		&-collapse
			box-shadow none
			border-top 0
			position relative
		&-nav
			margin 0
			li
				height 7em
				margin-left .5em
				float left
				a
					width 100%
					display block
					margin 0 auto
					font-size .8em
	@media screen and (max-width 540px)
		&-nav
			padding 0 15px
			li
				width 48%
				margin-left 0
				margin-bottom 15px
				&:nth-child(2n)
					margin-left 4%
				a
					span
						&:first-child
							margin-bottom -5px
		&-header
			a
				img
					max-width 5em
		&-title
			h3
				font-size 1.3em
.navbar
	&-black
		background-color $white
		border-radius 0
		border 0
		border-bottom 5px solid $red
		margin-bottom 0
		.navbar
			&-brand
				padding 0 15px
				display table
			&-img
				display table-cell
				vertical-align middle
				img
					max-width 210px
					margin 3.3px auto
			&-toggle
				border-color $red
				.icon-bar
					background-color $red
			&-nav
				li
					a
						padding 15px 10px
						span
							color $gray_dark
						i
							color $white
							margin-right 5px
							font-size 1.2em
							position relative
							top 2px
						&:hover,
						&:focus,
						&:active
							transition all .3s
							background-color $red
							span
								color $white
	&-text
		color $white
		font-family RobotoC
		a
			display inline-block
			margin-left 5px
			img
				max-width 50px
				position relative
				top 0
				left 0
				margin-left 0
	@media screen and (max-width 992px)
		&-black
			.navbar
				&-img
					img
						max-width 134px
		


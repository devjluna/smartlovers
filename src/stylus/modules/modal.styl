.modal
	&-body
		padding 35px 15px
	&-content
		background-image url(../images/base/line.jpg)
		background-repeat repeat-y
		background-position center
	&-col
		&-5
			width 40%
			display inline-block
			margin-right -4px
			vertical-align top
		&-2
			width 20%
			display inline-block
			margin-right -4px
			vertical-align top
	.close
		position absolute
		right 15px
		top 15px
		width 30px
		height 30px
		border 2px solid $red
		background-color $red
		border-radius 5px
		opacity 1
		text-shadow none
		transition all .3s
		span
			position absolute
			top 1px
			left 0
			width 100%
			color white
		&:hover
			background-color $gray_dark
			border-color $gray_dark
			span
				color white
	&-bubble
		display table
		height 100%
		width 100%
	&-center
		display table-cell
		vertical-align middle
	&-figure
		height 220px
		figure
			height 100%
			width 100%
			background-size contain
			background-repeat no-repeat
			background-position center
		.bubble
			height 115px
			width 115px
			background-color $red
			display table
			border-radius 50%
			margin 0 auto
			text-align center
			h2
				margin 0
				font-size 1.5em
				display table-cell
				vertical-align middle
				color white
				text-transform uppercase
				font-family RobotoC
	&-title
		text-align center
		line-height initial
		margin-top 15px
		height 40px
		h4
			margin 0
			color $gray
			font-family RobotoC
			font-weight 700
		h5
			margin 0
			color $gray_dark
	&-ico
		text-align center
		margin-top 55px
		&-f
			display inline-block
			
/*
 * features
*/

.features
	text-align center
	height 50px
	width 100%
	display table
	margin-bottom 20px
	h4
		display table-cell
		vertical-align middle
		margin 0
		font-size 1.1em
	&-btn
		text-align center

/*
 * icof
*/

.icof
	width 50px
	height 50px
	border 1px solid #94999C
	border-radius 50%
	background white
	display table
	margin-bottom 20px
	h4
		margin 0
		display table-cell
		vertical-align middle
		font-family 1.7em




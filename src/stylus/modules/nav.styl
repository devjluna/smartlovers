.header-nav
	position absolute
	width 100%
	top 0
	z-index 20
	.navbar
		&-full
			padding-right 0
			padding-left 0
			text-align center
		&-header
			float none
			height auto
			display inline-block
			margin-bottom 10px
		&-brand
			display inline-block
			float none
			height auto
			img
				max-width 150px
		&-nav
			border 1px solid white
			float none
			display -webkit-box
			li
				a
					color white
					text-transform uppercase
					transition all .3s
					font-family OpenCond
					font-weight 700
					font-size 1.3em
					padding 15px 30px
					&:hover,
					&:focus,
					&:active
						background-color rgba($red,.5)
						color white
						transition all .3s
		&-content
			display inline-block
			background-color rgba(0,0,0,.6)
			padding 10px
		&-collapse
			width 100%
			text-align center
			padding 0
			&.navbar
				&-full
					position fixed
					top 0
					.navbar
						&-nav
							border 0
							display inline-block
							margin-bottom -5px
						&-content
							padding 0
							width 100%
		&-social
			display inline-block
			position absolute
			right 50px
			top 50px
			.list-social
				display table
				margin-bottom 0
				li
					float left
					margin 0 10px
					&:first-child
						margin-left 0
					&:last-child
						margin-right 0
					a
						display inline-block
						opacity 1
						transition all .3s
						&:hover
							opacity .5
						i
							font-size 2em
							color $white
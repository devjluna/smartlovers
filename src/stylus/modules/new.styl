.new
	&-text
		h5
			text-align left
			text-transform uppercase
			font-family OpenCond
			font-weight 700
			font-size 1.2em
			margin 0
		h6
			text-align left
			color red
			margin 0
			margin-bottom 15px
			text-transform uppercase
			font-family OpenCond
			font-weight 700
		p
			text-align left
	&-title
		text-align left
		margin-bottom 3.5em
		border-bottom 1px solid rgba($gray, .3)
		width 100%
		float left
		.title
			float left
			text-transform uppercase
			font-size 2em
			margin-top .1em
			margin-bottom .7em
			font-family OpenCond
			font-weight 700
			color $gray
			margin-bottom 0.5em
			span
				color $red
.product
	&-info
		text-align center
	&-feature
		background-color $gray_section
		.section
			&-title
				margin-bottom 40px
	&-img,
	&-description
		display inline-block
		margin-right -4px
		vertical-align top
	&-img
		width 20%
		text-align right
		vertical-align middle
	&-description
		vertical-align middle
		width 40%
		text-align left
		padding-left 20px
	@media screen and (max-width 450px)
		&-feature
			.section
				&-title
					text-align center
	@media screen and (max-width 1200px)
		&-img
			width 25%
		&-description
			width 50%
	@media screen and (max-width 996px)
		&-img
			width 30%
		&-description
			width 60%
	@media screen and (max-width 768px)
		&-img
			width 100%
			text-align center
		&-description
			width 100%
			padding-left 0
	@media screen and (max-width 450px)
		&-description
			margin-top 20px
.phone
	&-feature
		display inline-block
		width 16.66%
		margin-right -4px
		padding 0 20px
		vertical-align middle
	&-img
		background-size contain
		background-position center
		background-repeat no-repeat
		width 228px
		height 400px
		vertical-align middle
		display inline-block
	&-title
		h3
			font-family RobotoC
			font-weight 700
			margin 0
		h4
			font-family RobotoC
			font-weight 300
			margin 0
	&-price
		border-top 1px solid $gray_light
		border-bottom 1px solid $gray_light
		padding 15px 0
		margin 20px 0
		h3
			font-family Roboto
			font-weight 700
			color $red
			font-size 3em
			margin 0
		h4
			font-family Roboto
			font-weight 400
			margin 0
		h5
			font-family Roboto
			font-weight 400
			margin 0
			font-size 0.8em
	&-plan
		h3
			margin 0
			font-family RobotoC
			font-weight 300
			font-size 18px
			text-transform uppercase
		h4
			margin 0
	@media screen and (max-width 1100px)
		&-feature
			padding 0
			
	@media screen and (max-width 996px)
		&-feature
			width 25%
			&:nth-of-type(5)
				margin-top 20px
			&:nth-of-type(6)
				margin-top 20px
	@media screen and (max-width 768px)
		&-feature
			width 33.33%
			&:nth-of-type(4)
				margin-top 20px
		&-img
			height 250px
	@media screen and (max-width 450px)
		&-feature
			width 50%
			&:nth-of-type(3)
				margin-top 20px
		&-title
			text-align center
		&-price
			.block
				&-two
					width 100%
					margin-right 0
					text-align center
					&:nth-of-type(2)
						text-align center
						margin-top 20px
.feature
	&-icon
		span
			font-size 5em
	&-title
		h3
			font-size 2em
			font-family Roboto
			font-weight 700
			color $red
			margin 10px 0 3px 0
		h4
			font-size 1em
			margin 0
.block
	&-two
		display inline-block
		width 50%
		margin-right -4px
		vertical-align middle
		&:nth-of-type(2)
			text-align right
			.btn
				text-transform uppercase
				border-radius 20px
				width 80%
				
.plan-radio
	display table
	margin 15px 0 0
	width 100%
.block-plan
	padding-right 5px
	display inline-block
	width 33.3%
	float left
	position relative
	@media screen and (max-width 450px)
		width 50%
	input[type="radio"], 
	input[type="checkbox"]
		opacity 0
		position absolute
		& + label 
			cursor pointer
			padding 10px 0
			text-align center
			border 1px solid $gray
			font-family Roboto
			font-weight 400
			color $gray_dark
			width 100%
			border-radius 10px
			transition all .3s
		&:checked + label
			background-color $gray_dark
			border 1px solid $gray_dark
			color white
